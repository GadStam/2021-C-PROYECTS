<div class="col-md-12">
<form class="mt-1 px-2" method="post" action='@Url.Action("GuardarPizza","Home")'>
  <center>
    <div class="row">
      <div class="col-6">
        <h1>Nombre</h1>
        <input class="nombre" type="text" name="Nombre" required></br>
      </div>
      <div class="col-6">
        <h1>Precio$</h1>     
       <input type="number" id="tentacles" name="Precio" required
       min="1" max="10000">
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <h1>Tamaño</h1>
        <select class="form-select form-select-lg mb-3 nombre" name="Tamaño" aria-label=".form-select-lg example" required>
          <option selected></option>
          <option value="Chica">Chica</option>
          <option value="Mediana">Mediana</option>
          <option value="Grande">Grande</option>
        </select>
      </div>
      <div class="col-6">
        <h1>URL FOTO</h1>
        <input class="nombre" type="text" name="UrlFoto" required></br>
      </div>
    </div>
    <h1>Ingredientes</h1>
    <div class="row">
      @foreach (ingredientes ing in ViewBag.ListadoIngredientes)
      {        
        <div class="col-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="Ingredientes"  value="@ing.IdIngredientes" id="defaultCheck1">
            <label class="form-check-label" style="font-size:20px; text-align: center;" for="defaultCheck1">@ing.Nombre</label>
          </div>
        </div>
      }
    </div>
    <button style="margin-bottom:3rem; width: 8rem;" type="submit" class="btn btn-dark"><h6>CONFIRMAR</h6></button>
  </center>
</form>
</div>
